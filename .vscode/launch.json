{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Executar C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder};C:/SFML-3.0.0;C:/SFML-3.0.0/include/;C:/SFML-3.0.0/include/SFML;C:/SFML-3.0.0/bin;C:/SFML-3.0.0/lib;C:/mingw64/bin;C:/mingw64/x86_64-w64-mingw32/lib;${env:PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilita formatação de variáveis para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
